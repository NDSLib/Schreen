<SettingsWindow>:
    BoxLayout:
        Splitter:
            strip_size: 5  
            sizable_from: 'right'
            #orientation:"vertical"
            size_hint:.3,1
            id:setting_list_window

            ScrollView:
                #size_hint_x:.4

                #size_hint:1,1
                BoxLayout:
                    id:setting_list
                    size_hint_x:.99
                    size_hint_y: None
                    orientation: "vertical"
                    height: self.minimum_height
                    bar_width: 0

                    MDFlatButton:
                        font_size: dp(10)
                        text_size:self.size
                        halign: 'left'
                        text:"SSL"
                        text_color:0,0,0,.7
                        size_hint_x:1
                    MDFlatButton:
                        font_size: dp(10)
                        size_hint_x:1
                        text:"言語-Lang"
                        on_release:root.clicked()
                    MDFlatButton:
                        font_size: dp(10)
                        size_hint_x:1
                        text:"Darkmode"
                    MDFlatButton:
                        font_size: dp(10)
                        size_hint_x:1
                        text:"Developer"
                                                                                                                


            #FloatLayout:
            #    pos: setting_list.pos
            #    #size_hint:None,None
            #    canvas:
            #        Color:
            #            rgb:.7,.7,.7
            #        Rectangle:
            #            pos: setting_list.pos
            #            size: 3,1000


        BoxLayout:
            orientation:"vertical"

            #size_hint:1,1
            
            MDLabel:
                text_size:self.size
                size_hint:None,None
                #halign: 'left'
                valign: 'middle'
                size:1000,75
                text:" SSL Setting"
                font_size: dp(17)
                canvas.before:
                    Color:
                        rgba: (0,0,0,1)
                    Line:
                        #width: 0.5
                        #rectangle: (self.x, self.y, self.width, self.height)
                        rectangle: (self.x,self.y,root.width,0)




            
            ScreenManager:
                id:setting_screen_manager

            BoxLayout:
                size_hint:.5,.05
                spacing: dp(15)
                MDRaisedButton:
                    size_hint:None,None
                    size:1000,75
                    pos_hint:{"center_x":.7,"center_y":.9}
                    text:"ok"
                MDRaisedButton:
                    size_hint:None,None
                    pos_hint:{"center_x":.9,"center_y":.9}
                    text:"cancel"
                


<SSLSetting>:
    ScrollView:
        BoxLayout:
            size_hint:1,1
            orientation:"vertical"
            padding:dp(25)
            height: self.minimum_height
            

            BoxLayout:
                size_hint:1,.1
                #pos_hint:{"center_x":.5}
                MDLabel:
                    text_size: self.size
                    size_hint:1,None
                    pos_hint:{"center_y":.5}
                    size:100,10
                    text:"enable"
                    halign: 'left'
                    valign: 'middle'
                MDSwitch:
                    active:False
                    size_hint:None,None
                    pos_hint:{"center_y":.5}

            BoxLayout:
                #size_hint:1,.1
                size_hint:1,None
                #size:500,45
                #pos_hint:{"center_x":.5}
                MDLabel:
                    size_hint:None,None
                    text_size: self.size
                    pos_hint:{"center_y":.5}
                    size:250,30
                    #halign: 'left'
                    valign: 'middle'
                    text:"OpenSSL PATH"
                Widget:
                    size_hint:.3,None
                MDTextField:
                    size_hint:None,None
                    pos_hint:{"center_y":.5}
                    size:400,30
                    text:"usr/bin/openssl"

            BoxLayout:
                size_hint:1,.1
                #pos_hint:{"center_x":.5}
                MDLabel:
                    size_hint:1,None
                    size:100,30
                    pos_hint:{"center_x":.5}
                    text:"OpenSSL Version"
                MDFlatButton:
                    text:"LibreSSL 2.8.3"

            BoxLayout:
                size_hint:1,.3
                #pos_hint:{"center_x":.5}
                MDLabel:
                    font_size:dp(10)
                    size:100,10
                    size_hint:1,None
                    pos_hint:{"center_x":.5}
                    text:"KEY SETTING"
                MDFlatButton:
                    text:"create Keys wizard"

            BoxLayout:
                size_hint:1,.1
                #pos_hint:{"center_x":.5}
                MDLabel:
                    size_hint:1,None
                    size:100,10
                    pos_hint:{"center_x":.5}
                    text:"cert Path"
                MDTextField:                
                    text:"path/path/cert.crt"

            BoxLayout:
                size_hint:1,.1
                #pos_hint:{"center_x":.5}
                MDLabel:
                    size_hint:1,None
                    size:100,10
                    pos_hint:{"center_x":.5}
                    text:"key path"
                MDTextField:                
                    text:"ユーザー/path/key.key"


<LangSetting>:
    BoxLayout:
        MDLabel:
            text:"LANG SETTING"

<DarkmodeSetting@BoxLayout>:
    Label:
        text:"DarkMode Setting"

<DeveloperSetting@BoxLayout>:
    Label:
        text:"Developer Setting"

